@model AppointmentListViewModel

@{
    ViewData["Title"] = "List Appointments";
}



<table class="table border  table-hover thead-secondary">
    <thead>
        <tr class="">
            <th scope="col"> Doctor Name</th>
            <th scope="col">Appointment Time</th>
            <th scope="col">Duration</th>
            <th scope="col">Available</th>
        </tr>
       
    </thead>

    <tbody class="">
        @foreach (var item in Model.Appointments)
        {
            <tr>
                
                <td class="text-primary">
                    @Html.DisplayFor(modelitem => item.Doctor.DOctorName)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.DateTime)
                </td>
                <td>
                    <p> <i class="fas fa-hourglass-end"></i> @Html.DisplayFor(modelitem => item.Duration.TotalMinutes) mins</p>
                </td>
                <td>


                    <div class="">
                        <p class="button">
                            <a class="btn btn-primary"
                               asp-controller="BookingPage"
                               asp-action="AddToBookingPage"
                               asp-route-appointmentId="@item.AppointmentId">Reserve</a>
                        </p>
                    </div>

                    @*<a asp-controller="BookingPage"
        asp-action="AddToBookingPage"  asp-route-appointmentId="@item.AppointmentId">Reserve</a>*@

                </td>

            </tr>

        }
    </tbody>

</table>


